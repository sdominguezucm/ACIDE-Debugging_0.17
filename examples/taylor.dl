% Taylor
%
% e = 1 + 1 + 1/2! + 1/3! + 1/4! + ...
%
% e = sigma n=0 (1/n!)

% t(C) :-
%   t(C).
% t(C) :-
%   n => count(n,C), 
%        C<10.

nth(U,0).
nth(U,N) :-
  nth(U,M),
  N = M+1,
  N<U.

term(N,U,T) :-
  nth(U,N),
  fac(N,F),
  T = 1/F.
  
fac(0, 1).
fac(N, F) :-
  N>0,
  N1 is N-1,
  fac(N1, F1),
  F is N * F1.
